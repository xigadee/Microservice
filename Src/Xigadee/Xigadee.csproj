<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <PackageId>Xigadee</PackageId>
    <RootNamespace>Xigadee</RootNamespace>
    <AssemblyName>Xigadee</AssemblyName>
  </PropertyGroup>

  <PropertyGroup>
    <DocumentationFile>bin\$(Configuration)\$(TargetFramework)\Xigadee.xml</DocumentationFile>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Command\CommandPersistence\Server\DocumentDb\**" />
    <Compile Remove="Communication\Messaging\**" />
    <Compile Remove="ServiceHandler\Handlers\Serializers\Base\**" />
    <Compile Remove="ServiceHandler\Ids\**" />
    <Compile Remove="ServiceHandler\Interfaces\Handler\**" />
    <Compile Remove="ServiceHandler\JWT\Interfaces\**" />
    <EmbeddedResource Remove="Command\CommandPersistence\Server\DocumentDb\**" />
    <EmbeddedResource Remove="Communication\Messaging\**" />
    <EmbeddedResource Remove="ServiceHandler\Handlers\Serializers\Base\**" />
    <EmbeddedResource Remove="ServiceHandler\Ids\**" />
    <EmbeddedResource Remove="ServiceHandler\Interfaces\Handler\**" />
    <EmbeddedResource Remove="ServiceHandler\JWT\Interfaces\**" />
    <None Remove="Command\CommandPersistence\Server\DocumentDb\**" />
    <None Remove="Communication\Messaging\**" />
    <None Remove="ServiceHandler\Handlers\Serializers\Base\**" />
    <None Remove="ServiceHandler\Ids\**" />
    <None Remove="ServiceHandler\Interfaces\Handler\**" />
    <None Remove="ServiceHandler\JWT\Interfaces\**" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\AssemblyInfo\SharedAssemblyInfo.cs" Link="Properties\SharedAssemblyInfo.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CSharp" Version="4.7.0" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Xigadee.Abstractions\Xigadee.Abstractions.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="DataCollection\Pipeline\Add\" />
    <Folder Include="ServiceHandler\Handlers\Serializers\Pipeline\" />
  </ItemGroup>

</Project>
